<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.app.mapper.PersonMapper">
    <select id="queryPersonById" resultType="com.itheima.app.entity.Person" parameterType="java.lang.Integer">
        select * from person where no = #{no}
    </select>
</mapper>